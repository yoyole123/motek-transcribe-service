# Copy this file to .env and fill in values for local development.
# In AWS Lambda, set these as function environment variables.

# Google Drive / Google Cloud
SERVICE_ACCOUNT_FILE=sa.json
DRIVE_FOLDER_ID=CHANGE_ME

# Email (Gmail SMTP)
EMAIL_TO=recipient@example.com
GMAIL_SENDER_EMAIL=sender@gmail.com
GMAIL_APP_PASSWORD=CHANGE_ME

# RunPod model access
RUNPOD_API_KEY=CHANGE_ME
RUNPOD_ENDPOINT_ID=CHANGE_ME

# Config file (languages mapping)
CONFIG_PATH=config.json

# Processing controls
MAX_SEGMENT_CONCURRENCY=2
SEG_SECONDS=480
MAX_SEGMENT_SIZE=8388608
MAX_SEGMENT_RETRIES=2
MAX_PAYLOAD_SIZE=9437184
MAX_SPLIT_DEPTH=3

# Schedule controls
TIME_WINDOW_ENABLED=1
SCHEDULE_START_HOUR=8
SCHEDULE_END_HOUR=22
SCHEDULE_DAYS=SUN-SAT
SCHEDULE_TIMEZONE=UTC

# Feature toggles
SKIP_DRIVE=0
BYPASS_SPLIT=0
ADD_RANDOM_PERSONAL_MESSAGE=1

# Misc
BALANCE_ALERT_VALUE=2
AUDIO_EXTENSIONS=.m4a,.wav,.mp3,.ogg,.flac,.aac,.wma,.m4b,.aiff,.aif,.opus
FFMPEG_PATH=ffmpeg

# CDK / AWS optional
FFMPEG_LAYER_ARN=
CDK_DEFAULT_ACCOUNT=
CDK_DEFAULT_REGION=eu-west-1

# Tests (opt-in)
RUNPOD_E2E=0

